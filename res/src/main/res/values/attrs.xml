<?xml version="1.0" encoding="utf-8"?>
<resources>


  <declare-styleable name="loading">
    <attr format="dimension" name="minWidth"/>
    <attr format="dimension" name="maxWidth"/>
    <attr format="dimension" name="minHeight"/>
    <attr format="dimension" name="maxHeight"/>
    <attr format="string" name="indicatorName"/>
    <attr format="color" name="indicatorColor"/>
  </declare-styleable>


  <declare-styleable name="tabview">
    <attr format="color|reference" name="unSelectColor"/>
    <attr format="color|reference" name="selectColor"/>
    <attr format="dimension|reference" name="unSelectSize"/>
    <attr format="dimension|reference" name="selectSize"/>
    <attr format="dimension|reference" name="space"/>
  </declare-styleable>


  <declare-styleable name="seekbar">
    <attr format="integer" name="loadingProgress"/>
  </declare-styleable>

  <attr format="reference" name="SwipeBackLayoutStyle"/>

  <declare-styleable name="SwipeBackLayout">
    <attr format="dimension" name="edge_size"/>
    <attr name="edge_flag">
      <enum name="left" value="0"/>
      <enum name="right" value="1"/>
      <enum name="bottom" value="2"/>
      <enum name="all" value="3"/>
    </attr>
    <attr format="reference" name="shadow_left"/>
    <attr format="reference" name="shadow_right"/>
    <attr format="reference" name="shadow_bottom"/>
  </declare-styleable>
</resources>